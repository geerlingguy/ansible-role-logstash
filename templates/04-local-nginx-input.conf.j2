#{{ ansible_managed }}
input {
  file {
    type => "nginx"  
    path => "/var/log/nginx/*.log"
    exclude => ["*.gz"]
  }
}

filter {
  if [type] == "nginx" {
    if [path] =~ "access" {
      mutate { replace => { type => "nginx_access" } }
      grok {
        match => { "message" => "%{COMBINEDAPACHELOG}" }
      }
      date {
        match => [ "timestamp" , "dd/MMM/yyyy:HH:mm:ss Z" ]
      }
    } else if [path] =~ "error" {
      mutate { replace => { type => "nginx_error" } }
    } else {
      mutate { replace => { type => "random_logs" } }
    }
  }
}
